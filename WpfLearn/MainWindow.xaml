<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLearn"
    
        xmlns:UserControls="clr-namespace:WpfLearn.UserControls" 
    
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" 
        x:Class="WpfLearn.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="395" Width="558" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ImageButton4Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid x:Name="grid1" ShowGridLines="True">
        <UserControls:ImageButton4 x:Name="imageButton4" Content="ImageButton4" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="52" Width="126" Style="{DynamicResource ImageButton4Style}" ImageMouseEnter="资源/K_Enter.png" ImageMouseLeave="资源/K_Leave.png"/>
        <UserControls:ImageButton4 x:Name="imageButton1" Content="ImageButton4" HorizontalAlignment="Left" Margin="0,67,0,0" VerticalAlignment="Top" Height="69" Width="147" Style="{DynamicResource ImageButton4Style}" ImageMouseEnter="资源/灰色Enter.png" ImageMouseLeave="资源/灰色Leave.png" Text="1111111"/>
    </Grid>


</Window>
