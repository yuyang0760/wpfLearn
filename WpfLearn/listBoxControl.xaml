<UserControl x:Class="WpfLearn.listBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfLearn"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="100">
    <UserControl.Resources>


        <Style x:Key="ListBoxNoItem" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="Lavender"/>
            <!--下拉长度为0-->
            <Setter Property="MaxDropDownHeight" Value="0"/>



        </Style>



    </UserControl.Resources>
    <Grid>
        <ComboBox x:Name="listBox"    HorizontalAlignment="Right" Height="24" Margin="0,0,-100,-24" VerticalAlignment="Bottom" Width="100" Style="{DynamicResource ListBoxNoItem}">

            <Label x:Name="label1" Content="E" />
            <Label x:Name="label2" Content="A" />
            <Label x:Name="label3" Content="I" />
            <Label x:Name="label4" Content="M" />
        </ComboBox>

    </Grid>
</UserControl>
