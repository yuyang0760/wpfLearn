<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfLearn.UserControls">

    <!-- comboBox的背景 -->
    <ImageBrush x:Key="ComboBoxNoItemBackground" ImageSource="pack://application:,,,/资源/ComboBox背景.png" />
    <ImageBrush x:Key="ComboBoxNoItemBackground_hui" ImageSource="pack://application:,,,/资源/ComboBox背景灰.png" />


    <!--ImageButton4的样式-->
    <Style x:Key="ImageButton4Style" TargetType="local:ImageButton4">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <!--ImageButton4控件模板-->
                    <ControlTemplate  TargetType="local:ImageButton4">
                        <!--image/text-->
                        <!--背景色，透明-->
                        <Grid Background="Transparent">
                            <Image x:Name="image" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ImageMouseLeave}"/>
                            <Label x:Name="label" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Text}"/>
                        </Grid>

                        <!--触发器-->
                        <ControlTemplate.Triggers>
                            <!--鼠标滑过-->
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="image" Property="Source" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ImageMouseEnter}" />
                            </Trigger>
                            <!--鼠标按下-->
                            <Trigger Property="IsPressed" Value="true">
                                <Setter TargetName="image" Property="Margin" Value="0,3,0,0" />
                                <Setter TargetName="label" Property="Margin" Value="0,3,0,0" />
                            </Trigger>
                            <!--按钮失效-->
                            <!--<Trigger Property="IsEnabled" Value="false">
                <Setter TargetName="image" Property="Source" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ImageCurrent}" />
            </Trigger>-->
                        </ControlTemplate.Triggers>


                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>


    <!--ComboBoxNoItem1Style样式-->
    <Style x:Key="ComboBoxNoItem1Style" TargetType="{x:Type local:ComboBoxNoItem1}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ComboBoxNoItem1}">
                    <!--最外层Grid,设置背景-->
                    <Grid Margin="0" x:Name="grid1" Background="{DynamicResource ComboBoxNoItemBackground}">
                        <!--里面的一个Border，当鼠标移上去时，显示的框-->
                        <Border x:Name="border"  BorderBrush="{x:Null}" BorderThickness="2" Height="Auto" Margin="10" VerticalAlignment="Stretch" Width="Auto" >
                            <!--Grid 分成 3部分 两个图片按钮，一个TextBlock ,背景和grid1的背景一样 -->
                            <Grid Margin="0,0,0,0" Background="{Binding ElementName=grid1,Path=Background}">
                                <Grid.ColumnDefinitions>
                                    <!--标记：分的比例，比例可能还会改-->
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="6*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <!--标记： 元素3个     -->

                                <TextBlock x:Name="textBlock" Grid.Column="1" TextWrapping="Wrap" Text="{TemplateBinding Text }" TextAlignment="Center" VerticalAlignment="Center"/>

                                <local:ImageButton4 x:Name="imageButton1"  
                                                   local:ComboBoxNoItem1.IsLeftEnabled="True"
                                                   Command="local:ComboBoxNoItem1.LeftClickCommand" 
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                    Grid.Column="0" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Style="{DynamicResource ImageButton4Style}" ImageMouseEnter="pack://application:,,,/资源/箭头2左_Enter.png" ImageMouseLeave="pack://application:,,,/资源/箭头2左_Leave.png"/>
                                <local:ImageButton4 x:Name="imageButton2" 
                                                   local:ComboBoxNoItem1.IsRightEnabled="True"
                                                   Command="local:ComboBoxNoItem1.RightClickCommand" 
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                   Grid.Column="2" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Style="{DynamicResource ImageButton4Style}" ImageMouseEnter="pack://application:,,,/资源/箭头2右_Enter.png" ImageMouseLeave="pack://application:,,,/资源/箭头2右_Leave.png"/>

                            </Grid>
                        </Border>
                    </Grid>


                    <!--触发器-->
                    <ControlTemplate.Triggers>
                        <!--鼠标移上去，显示border-->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="#977D4D"/>
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
